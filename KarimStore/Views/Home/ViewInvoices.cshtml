@model IEnumerable<KarimStore.Models.Invoice>

@{
    ViewBag.Title = "ViewInvoices";

}

<h2>ViewInvoices</h2>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.CustomerID)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ProductName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.UnitPrice)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Quantity)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.InvDate)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.CustomerID)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ProductName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.UnitPrice)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Quantity)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.InvDate)
        </td>
        <td>
            @Html.ActionLink("Details", "Details", new { id=item.InvoicesID }) |
            @Html.ActionLink("Delete", "DeleteFromInv", new { id=item.InvoicesID })
        </td>
    </tr>
}

</table>
